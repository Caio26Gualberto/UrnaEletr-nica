@{
    ViewData["Title"] = "Urna Eletrônica";
}
@section startCss
{
    <link href="./css/style.css" rel="stylesheet"/>
}

<div class="urna">
    <div class="tela">
        <div class="d-1">
            <div class="d-1-left">
                <div class="d-1-1">
                    <span>SEU VOTO PARA</span>
                </div>
                <div class="d-1-2">
                    <span>PRESIDENTE</span>
                </div>
                <div class="d-1-3 inputs">
                    <input type="text" id="resultado1" class="numero pisca" placeholder=""  disabled />
                    <input type="text" id="resultado2" class="numero" placeholder=""  disabled />
                </div>
                <div class="d-1-4">
                    Nome: <span id="presidente"></span> <br />
                    Vice: <span id="vice"></span><br />
                </div>
            </div>
            <div class="d-1-right"></div>
        </div>

        <div class="d-2">
            Aperte a tecla: <br />
            CONFIRMA para CONFIRMAR este voto <br />
            CORRIGE para REINICIAR este voto
        </div>
    </div>

    <div class="teclado">
        <div class="teclado-linha">
            <button class="teclado-botao" onclick="numero(1)">1</button>
            <button class="teclado-botao" onclick="numero(2)">2</button>
            <button class="teclado-botao" onclick="numero(3)">3</button>
        </div>
        <div class="teclado-linha">
            <button class="teclado-botao" onclick="numero(4)">4</button>
            <button class="teclado-botao" onclick="numero(5)">5</button>
            <button class="teclado-botao" onclick="numero(6)">6</button>
        </div>
        <div class="teclado-linha">
            <button class="teclado-botao" onclick="numero(7)">7</button>
            <button class="teclado-botao" onclick="numero(8)">8</button>
            <button class="teclado-botao" onclick="numero(9)">9</button>
        </div>
        <div class="teclado-linha">
            <button class="teclado-botao" onclick="numero(0)">0</button>
        </div>

        <div class="teclado-linha">
            <button class="teclado-botao botao-branco">BRANCO</button>
            <button class="teclado-botao botao-corrige" onclick="corrigir()">CORRIGE</button>
            <button class="teclado-botao botao-confirma" onclick="confirmar()" id="btnConfirma">CONFIRMA</button>
        </div>
    </div>
</div>



